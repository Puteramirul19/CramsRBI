@model CramsRBIApp.ViewModel.UserListViewModel
@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex align-items-center mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">User Management</li>
        </ol>
        <h1 class="page-header mb-0">
            <i class="fa fa-users text-primary me-2"></i> User Management
        </h1>
        <p class="text-muted">Manage all registered users in the system</p>
    </div>
    <div class="ms-auto">
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-4">
            <i class="fa fa-user-plus me-1"></i> Add New User
        </a>
    </div>
</div>

<div class="card panel panel-inverse">
    <div class="card-header bg-gradient-dark panel-heading d-flex align-items-center">
     
        <h4 class="panel-title text-white mb-0">
            Registered Users   
        </h4>
        <div class="ms-auto me-2">
            <span class="badge rounded-pill bg-info">
                <i class="fa fa-info-circle me-1"></i> Page @Model.PaginationInfo.CurrentPage of @Model.PaginationInfo.TotalPages
            </span>
        </div>
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3 rounded-3 border-start border-success border-5">
            <i class="fa fa-check-circle me-2 text-success"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3 rounded-3 border-start border-danger border-5">
            <i class="fa fa-exclamation-circle me-2 text-danger"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card-body p-0">
        <div class="p-3 bg-light border-bottom">
            <!-- Search Form -->
            <form asp-action="UserList" method="get" class="mb-0">
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="fa fa-search text-muted"></i>
                    </span>
                    <input type="text" name="searchString" value="@Model.SearchString" class="form-control form-control-lg shadow-none" placeholder="Search by name or email...">
                    <button type="submit" class="btn btn-primary px-4">
                        Search
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchString))
                    {
                        <a asp-action="UserList" class="btn btn-outline-secondary">
                            <i class="fa fa-times me-1"></i> Clear
                        </a>
                    }
                </div>
            </form>
        </div>

        <!-- Users Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th width="50" class="text-center">#</th>
                        <th>
                            <a asp-action="UserList"
                               asp-route-sortField="LastName"
                               asp-route-sortOrder="@ViewData["NameSortParam"]"
                               asp-route-currentFilter="@Model.CurrentFilter"
                               class="text-dark text-decoration-none">
                                <div class="d-flex align-items-center">
                                    <span>Name</span>
                                    @if ((string)ViewData["CurrentSort"] == "LastName")
                                    {
                                        <i class="fa fa-sort-@(ViewData["NameSortParam"].ToString() == "asc" ? "down" : "up") ms-2"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-sort ms-2 text-muted"></i>
                                    }
                                </div>
                            </a>
                        </th>
                        <th>
                            <a asp-action="UserList"
                               asp-route-sortField="Email"
                               asp-route-sortOrder="@ViewData["EmailSortParam"]"
                               asp-route-currentFilter="@Model.CurrentFilter"
                               class="text-dark text-decoration-none">
                                <div class="d-flex align-items-center">
                                    <span>Email</span>
                                    @if ((string)ViewData["CurrentSort"] == "Email")
                                    {
                                        <i class="fa fa-sort-@(ViewData["EmailSortParam"].ToString() == "asc" ? "down" : "up") ms-2"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-sort ms-2 text-muted"></i>
                                    }
                                </div>
                            </a>
                        </th>
                        <th>Phone</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th width="80" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users.Any())
                    {
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="text-center">@user.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm bg-primary text-white rounded-circle p-2 me-2 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                            <span>@(user.FirstName.Substring(0, 1))@(user.LastName.Substring(0, 1))</span>
                                        </div>
                                        <div>
                                            <div class="text-dark fw-semibold">@user.FirstName @user.LastName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-envelope text-muted me-2"></i>
                                        <span>@user.Email</span>
                                    </div>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(user.PhoneNumber))
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-phone text-muted me-2"></i>
                                            <span>@user.PhoneNumber</span>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-primary rounded-pill">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="badge bg-success rounded-pill">
                                            <i class="fa fa-check-circle me-1"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning rounded-pill">
                                            <i class="fa fa-clock me-1"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-controller="Account" asp-action="EditUser" asp-route-id="@user.Id"
                                           class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip" title="Edit User">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                                            <span class="visually-hidden">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" asp-controller="Account" asp-action="EditUser" asp-route-id="@user.Id">
                                                    <i class="fa fa-edit fa-fw me-1"></i> Edit
                                                </a>
                                            </li>
                                            <!--
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <i class="fa fa-key fa-fw me-1"></i> Reset Password
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <i class="fa fa-lock fa-fw me-1"></i> Lock/Unlock
                                                </a>
                                            </li>
                                            -->
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" href="javascript:void(0);"
                                                   onclick="showDeleteModal(@user.Id, '@(user.FirstName) @(user.LastName)')">
                                                    <i class="fa fa-trash fa-fw me-1"></i> Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="py-5">
                                    <i class="fa fa-search fa-4x text-muted mb-3"></i>
                                    <h5>No users found</h5>
                                    @if (!string.IsNullOrEmpty(Model.SearchString))
                                    {
                                        <p class="text-muted">No users match your search criteria.</p>
                                        <a asp-action="UserList" class="btn btn-primary mt-2">
                                            <i class="fa fa-list me-1"></i> View All Users
                                        </a>
                                    }
                                    else
                                    {
                                        <p class="text-muted">There are no users registered in the system.</p>
                                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary mt-2">
                                            <i class="fa fa-user-plus me-1"></i> Register New User
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.PaginationInfo.TotalPages > 1)
        {
            <div class="bg-light p-3 border-top">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div class="d-flex align-items-center mb-2 mb-md-0">
                        <span class="text-muted me-2">Showing page @Model.PaginationInfo.CurrentPage of @Model.PaginationInfo.TotalPages</span>
                        <span class="badge bg-primary rounded-pill">
                            @Model.PaginationInfo.TotalItems total users
                        </span>
                    </div>

                    <ul class="pagination mb-0">
                        @if (Model.PaginationInfo.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="UserList"
                                   asp-route-sortField="@Model.SortField"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-currentFilter="@Model.CurrentFilter"
                                   asp-route-pageNumber="1"
                                   aria-label="First">
                                    <span aria-hidden="true"><i class="fa fa-angle-double-left"></i></span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-action="UserList"
                                   asp-route-sortField="@Model.SortField"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-currentFilter="@Model.CurrentFilter"
                                   asp-route-pageNumber="@(Model.PaginationInfo.CurrentPage - 1)"
                                   aria-label="Previous">
                                    <span aria-hidden="true"><i class="fa fa-angle-left"></i></span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    <span aria-hidden="true"><i class="fa fa-angle-double-left"></i></span>
                                </a>
                            </li>
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    <span aria-hidden="true"><i class="fa fa-angle-left"></i></span>
                                </a>
                            </li>
                        }

                        @{
                            int startPage = Math.Max(1, Model.PaginationInfo.CurrentPage - 2);
                            int endPage = Math.Min(Model.PaginationInfo.TotalPages, startPage + 4);
                            startPage = Math.Max(1, endPage - 4);
                        }

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.PaginationInfo.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="UserList"
                                   asp-route-sortField="@Model.SortField"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-currentFilter="@Model.CurrentFilter"
                                   asp-route-pageNumber="@i">
                                    @i
                                </a>
                            </li>
                        }

                        @if (Model.PaginationInfo.CurrentPage < Model.PaginationInfo.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="UserList"
                                   asp-route-sortField="@Model.SortField"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-currentFilter="@Model.CurrentFilter"
                                   asp-route-pageNumber="@(Model.PaginationInfo.CurrentPage + 1)"
                                   aria-label="Next">
                                    <span aria-hidden="true"><i class="fa fa-angle-right"></i></span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-action="UserList"
                                   asp-route-sortField="@Model.SortField"
                                   asp-route-sortOrder="@Model.SortOrder"
                                   asp-route-currentFilter="@Model.CurrentFilter"
                                   asp-route-pageNumber="@Model.PaginationInfo.TotalPages"
                                   aria-label="Last">
                                    <span aria-hidden="true"><i class="fa fa-angle-double-right"></i></span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    <span aria-hidden="true"><i class="fa fa-angle-right"></i></span>
                                </a>
                            </li>
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    <span aria-hidden="true"><i class="fa fa-angle-double-right"></i></span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteUserModalLabel">
                    <i class="fa fa-exclamation-triangle me-2"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="text-center mb-3">
                    <div class="avatar bg-danger text-white rounded-circle p-3 d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                        <i class="fa fa-user-times fa-2x"></i>
                    </div>
                    <h5>Are you sure you want to delete this user?</h5>
                    <p class="mb-0 text-dark" id="deleteUserName" style="font-weight: 600;"></p>
                </div>
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-circle me-2"></i>
                    This action cannot be undone. All data associated with this user will be permanently removed.
                </div>
            </div>
            <div class="modal-footer bg-light">
                <form id="deleteUserForm" asp-controller="Account" asp-action="DeleteUser" method="post">
                    <input type="hidden" id="deleteUserId" name="id" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash me-1"></i> Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // Function to show the delete confirmation modal
        function showDeleteModal(userId, userName) {
            // Set the user ID in the hidden field
            $('#deleteUserId').val(userId);

            // Set the user name in the confirmation message
            $('#deleteUserName').text(userName);

            // Show the modal
            $('#deleteUserModal').modal('show');
        }
    </script>
}