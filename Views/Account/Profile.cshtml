@model CramsRBIApp.Models.ApplicationUser
@{
    ViewData["Title"] = "My Profile";
}

<div class="d-flex align-items-center mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">My Profile</li>
        </ol>
        <h1 class="page-header mb-0">
            <i class="fa fa-user-circle text-primary me-2"></i> My Profile
        </h1>
        <p class="text-muted">View and manage your account information</p>
    </div>
</div>

<!-- Profile Information Card -->
<div class="row">
    <div class="col-xl-4">
        <div class="card panel panel-inverse">
            <div class="card-header bg-gradient-dark panel-heading">
                <h4 class="panel-title text-white mb-0">
                    <i class="fa fa-user me-2"></i> Profile Information
                </h4>
            </div>
            <div class="card-body text-center p-4">
                <div class="avatar avatar-xl bg-primary text-white rounded-circle p-4 mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                    <span class="fs-1">@(Model.FirstName.Substring(0, 1))@(Model.LastName.Substring(0, 1))</span>
                </div>
                <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted mb-3">
                    <i class="fa fa-envelope me-1"></i> @Model.Email
                </p>
                @if (ViewBag.UserRoles != null)
                {
                    @foreach (var role in ViewBag.UserRoles)
                    {
                        <span class="badge bg-primary rounded-pill mb-2">@role</span>
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-xl-8">
        <div class="card panel panel-inverse">
            <div class="card-header bg-gradient-dark panel-heading">
                <h4 class="panel-title text-white mb-0">
                    <i class="fa fa-info-circle me-2"></i> Account Details
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">First Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control" value="@Model.FirstName" readonly>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Last Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control" value="@Model.LastName" readonly>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label fw-semibold">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa fa-envelope"></i></span>
                            <input type="text" class="form-control" value="@Model.Email" readonly>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label fw-semibold">Phone Number</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa fa-phone"></i></span>
                            <input type="text" class="form-control" value="@(Model.PhoneNumber ?? "Not provided")" readonly>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Account Status</label>
                        <div>
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success rounded-pill">
                                    <i class="fa fa-check-circle me-1"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning rounded-pill">
                                    <i class="fa fa-clock me-1"></i> Pending
                                </span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">User Role</label>
                        <div>
                            @if (ViewBag.UserRoles != null)
                            {
                                @foreach (var role in ViewBag.UserRoles)
                                {
                                    <span class="badge bg-primary rounded-pill">@role</span>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Statistics Card -->
        <div class="card panel panel-inverse mt-3">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fa fa-chart-bar me-2"></i>Account Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fa fa-calendar fa-2x text-primary mb-2"></i>
                            <h5 class="mb-1">Member Since</h5>
                            <p class="text-muted">2025</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fa fa-shield-alt fa-2x text-success mb-2"></i>
                            <h5 class="mb-1">Security</h5>
                            <p class="text-muted">@(Model.TwoFactorEnabled ? "2FA Enabled" : "Standard")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3">
                            <i class="fa fa-lock fa-2x text-info mb-2"></i>
                            <h5 class="mb-1">Access Level</h5>
                            <p class="text-muted">
                                @if (ViewBag.UserRoles != null && ViewBag.UserRoles.Count > 0)
                                {
                                    @ViewBag.UserRoles[0]
                                }
                                else
                                {
                                    @:No Role
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>