@model CramsRBIApp.ViewModel.RoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="d-flex align-items-center mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Account" asp-action="RoleList">Role Management</a></li>
            <li class="breadcrumb-item active">Edit Role</li>
        </ol>
        <h1 class="page-header mb-0">
            <i class="fa fa-edit text-primary me-2"></i> Edit Role
        </h1>
        <p class="text-muted">Update role information and settings</p>
    </div>
    <div class="ms-auto">
        <a asp-controller="Account" asp-action="RoleList" class="btn btn-outline-secondary btn-lg">
            <i class="fa fa-arrow-left me-1"></i> Back to Roles
        </a>
    </div>
</div>

<div class="card panel panel-inverse">
    <div class="card-header bg-gradient-dark panel-heading d-flex align-items-center">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-bs-toggle="card-collapse">
                <i class="fa fa-minus"></i>
            </a>
        </div>
        <h4 class="panel-title text-white mb-0">
            <i class="fa fa-user-tag me-2"></i> Update Role Information
        </h4>
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3 rounded-3 border-start border-success border-5">
            <i class="fa fa-check-circle me-2 text-success"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3 rounded-3 border-start border-danger border-5">
            <i class="fa fa-exclamation-circle me-2 text-danger"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="panel-body p-4">
        <div class="row">
            <div class="col-xl-8 offset-xl-2">
                <!-- Role Info Card -->
                <div class="card mb-4 bg-light">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="avatar avatar-lg bg-info text-white rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                <i class="fa fa-user-tag fa-lg"></i>
                            </div>
                            <div>
                                <h4 class="mb-1">@Model.Name</h4>
                                <p class="text-muted mb-0">
                                    <i class="fa fa-info-circle me-1"></i> Role ID: @Model.Id
                                </p>
                                <small class="text-muted">
                                    Editing role configuration and permissions
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-controller="Account" asp-action="EditRole" method="post" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger rounded-3 p-3 bg-danger bg-opacity-10 mb-4"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4 row">
                        <label asp-for="Name" class="col-lg-4 col-form-label text-lg-end fw-semibold">Role Name <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa fa-user-tag"></i></span>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter role name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="text-muted fst-italic">
                                <i class="fa fa-info-circle me-1"></i> Role name should be descriptive and unique within the system.
                            </small>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="Description" class="col-lg-4 col-form-label text-lg-end fw-semibold">Description <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa fa-align-left"></i></span>
                                <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="Describe the role's purpose and responsibilities..."></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="text-muted fst-italic">
                                <i class="fa fa-info-circle me-1"></i> Provide a clear description of what this role is intended for and its main responsibilities.
                            </small>
                        </div>
                    </div>

                    <!-- Change History/Impact Notice -->
                    <div class="card bg-light border rounded-3 mb-4 mt-5">
                        <div class="card-header bg-light border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fa fa-exclamation-triangle text-warning me-2"></i> Important Notes
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-start">
                                        <i class="fa fa-users text-info me-2 mt-1"></i>
                                        <div>
                                            <h6 class="mb-1">Existing Users</h6>
                                            <p class="text-muted small mb-0">Changes to this role will affect all users currently assigned to it.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-start">
                                        <i class="fa fa-shield-alt text-success me-2 mt-1"></i>
                                        <div>
                                            <h6 class="mb-1">Permissions</h6>
                                            <p class="text-muted small mb-0">Role modifications may impact system security and access levels.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info mb-0 mt-3">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-lightbulb me-2"></i>
                                    <div>
                                        <strong>Best Practice:</strong> Consider creating a new role instead of modifying existing ones if the changes are significant.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- System Roles Warning -->
                    @if (Model.Name == "Admin" || Model.Name == "Administrator")
                    {
                        <div class="alert alert-warning mb-4">
                            <div class="d-flex align-items-start">
                                <i class="fa fa-exclamation-triangle fa-2x text-warning me-3 mt-1"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">System Role Warning</h6>
                                    <p class="mb-0">You are editing a system administrator role. Please be extremely careful as changes could affect system security and your own access permissions.</p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="row mb-2 mt-5">
                        <div class="col-lg-8 offset-lg-4">
                            <div class="d-flex align-items-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5 me-2">
                                    <i class="fa fa-save me-1"></i> Save Changes
                                </button>
                                <a asp-controller="Account" asp-action="RoleList" class="btn btn-outline-secondary btn-lg me-2">
                                    Cancel
                                </a>

                                <!-- Delete Button (if not a system role) -->
                                @if (Model.Name != "Admin" && Model.Name != "Administrator" && Model.Name != "User")
                                {
                                    <button type="button" class="btn btn-outline-danger btn-lg ms-auto"
                                            onclick="showDeleteRoleModal(@Model.Id, '@Model.Name')"
                                            data-bs-toggle="tooltip"
                                            title="Delete this role">
                                        <i class="fa fa-trash me-1"></i> Delete Role
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteRoleModal" tabindex="-1" aria-labelledby="deleteRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteRoleModalLabel">
                    <i class="fa fa-exclamation-triangle me-2"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="text-center mb-3">
                    <div class="avatar bg-danger text-white rounded-circle p-3 d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                        <i class="fa fa-user-times fa-2x"></i>
                    </div>
                    <h5>Are you sure you want to delete this role?</h5>
                    <p class="mb-0 text-dark" id="deleteRoleName" style="font-weight: 600;"></p>
                </div>
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-circle me-2"></i>
                    This action cannot be undone. The role will be permanently removed from the system. Make sure no users are currently assigned to this role.
                </div>
            </div>
            <div class="modal-footer bg-light">
                <form id="deleteRoleForm" asp-controller="Account" asp-action="DeleteRole" method="post">
                    <input type="hidden" id="deleteRoleId" name="id" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash me-1"></i> Delete Role
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Auto-focus on the role name field
            $('#Name').focus();

            // Character counter for description
            const descriptionField = $('#Description');
            const maxLength = 255;

            // Add character counter
            descriptionField.parent().append('<div class="text-end mt-1"><small class="text-muted" id="charCounter">' + descriptionField.val().length + '/' + maxLength + ' characters</small></div>');

            // Update counter on input
            descriptionField.on('input', function() {
                const currentLength = $(this).val().length;
                $('#charCounter').text(currentLength + '/' + maxLength + ' characters');

                if (currentLength > maxLength * 0.9) {
                    $('#charCounter').removeClass('text-muted').addClass('text-warning');
                } else {
                    $('#charCounter').removeClass('text-warning').addClass('text-muted');
                }
            });

            // Form validation enhancement
            $('form').on('submit', function(e) {
                const roleName = $('#Name').val().trim();
                const description = $('#Description').val().trim();

                if (!roleName || !description) {
                    e.preventDefault();

                    // Show custom validation message
                    if (!$('.alert-warning').length) {
                        $('.panel-body').prepend(`
                            <div class="alert alert-warning alert-dismissible fade show rounded-3 border-start border-warning border-5">
                                <i class="fa fa-exclamation-triangle me-2 text-warning"></i>
                                <strong>Validation Error!</strong> Please fill in all required fields before submitting.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `);
                    }

                    // Scroll to top to show error
                    $('html, body').animate({
                        scrollTop: $('.alert-warning').offset().top - 100
                    }, 500);
                }
            });

            // Highlight changes made to form fields
            const originalName = $('#Name').val();
            const originalDescription = $('#Description').val();

            $('#Name, #Description').on('input', function() {
                const currentName = $('#Name').val();
                const currentDescription = $('#Description').val();

                // Show unsaved changes indicator
                if (currentName !== originalName || currentDescription !== originalDescription) {
                    if (!$('.unsaved-changes').length) {
                        $('.card-header').append('<span class="badge bg-warning ms-2 unsaved-changes"><i class="fa fa-exclamation-circle me-1"></i>Unsaved Changes</span>');
                    }
                } else {
                    $('.unsaved-changes').remove();
                }
            });
        });

        // Function to show the delete confirmation modal
        function showDeleteRoleModal(roleId, roleName) {
            // Set the role ID in the hidden field
            $('#deleteRoleId').val(roleId);

            // Set the role name in the confirmation message
            $('#deleteRoleName').text(roleName);

            // Show the modal
            $('#deleteRoleModal').modal('show');
        }

        // Warn user about unsaved changes when leaving the page
        window.addEventListener('beforeunload', function(e) {
            if ($('.unsaved-changes').length > 0) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    </script>
}