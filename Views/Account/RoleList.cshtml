@model IEnumerable<CramsRBIApp.Models.ApplicationRole>
@{
    ViewData["Title"] = "Role Management";
}

<div class="d-flex align-items-center mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Role Management</li>
        </ol>
        <h1 class="page-header mb-0">
            <i class="fa fa-user-tag text-primary me-2"></i> Role Management
        </h1>
        <p class="text-muted">Manage all roles in the system</p>
    </div>
    <div class="ms-auto">
        <a asp-controller="Account" asp-action="CreateRole" class="btn btn-primary btn-lg px-4">
            <i class="fa fa-plus-circle me-1"></i> Add New Role
        </a>
    </div>
</div>

<div class="card panel panel-inverse">
    <div class="card-header bg-gradient-dark panel-heading d-flex align-items-center">
        <h4 class="panel-title text-white mb-0">
            System Roles
        </h4>
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3 rounded-3 border-start border-success border-5">
            <i class="fa fa-check-circle me-2 text-success"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3 rounded-3 border-start border-danger border-5">
            <i class="fa fa-exclamation-circle me-2 text-danger"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th width="50" class="text-center">#</th>
                        <th>Role Name</th>
                        <th>Description</th>
                        <th width="150" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="text-center">@role.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm bg-info text-white rounded-circle p-2 me-2 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                            <i class="fa fa-user-tag"></i>
                                        </div>
                                        <div class="fw-semibold">@role.Name</div>
                                    </div>
                                </td>
                                <td>@role.Description</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-controller="Account" asp-action="EditRole" asp-route-id="@role.Id"
                                           class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip" title="Edit Role">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm"
                                                onclick="showDeleteRoleModal(@role.Id, '@role.Name')" data-bs-toggle="tooltip" title="Delete Role">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="py-5">
                                    <i class="fa fa-user-tag fa-4x text-muted mb-3"></i>
                                    <h5>No roles found</h5>
                                    <p class="text-muted">There are no roles defined in the system yet.</p>
                                    <a asp-controller="Account" asp-action="CreateRole" class="btn btn-primary mt-2">
                                        <i class="fa fa-plus-circle me-1"></i> Create First Role
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteRoleModal" tabindex="-1" aria-labelledby="deleteRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteRoleModalLabel">
                    <i class="fa fa-exclamation-triangle me-2"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="text-center mb-3">
                    <div class="avatar bg-danger text-white rounded-circle p-3 d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                        <i class="fa fa-user-times fa-2x"></i>
                    </div>
                    <h5>Are you sure you want to delete this role?</h5>
                    <p class="mb-0 text-dark" id="deleteRoleName" style="font-weight: 600;"></p>
                </div>
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-circle me-2"></i>
                    This action cannot be undone. The role will be permanently removed from the system.
                </div>
            </div>
            <div class="modal-footer bg-light">
                <form id="deleteRoleForm" asp-controller="Account" asp-action="DeleteRole" method="post">
                    <input type="hidden" id="deleteRoleId" name="id" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash me-1"></i> Delete Role
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // Function to show the delete confirmation modal
        function showDeleteRoleModal(roleId, roleName) {
            // Set the role ID in the hidden field
            $('#deleteRoleId').val(roleId);

            // Set the role name in the confirmation message
            $('#deleteRoleName').text(roleName);

            // Show the modal
            $('#deleteRoleModal').modal('show');
        }
    </script>
}