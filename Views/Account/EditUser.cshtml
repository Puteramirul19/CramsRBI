@model CramsRBIApp.ViewModel.EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="d-flex align-items-center mb-4">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Account" asp-action="UserList">User Management</a></li>
            <li class="breadcrumb-item active">Edit User</li>
        </ol>
        <h1 class="page-header mb-0">
            <i class="fa fa-user-edit text-primary me-2"></i> Edit User
        </h1>
        <p class="text-muted">Update user information and settings</p>
    </div>
    <div class="ms-auto">
        <a asp-controller="Account" asp-action="UserList" class="btn btn-outline-secondary btn-lg">
            <i class="fa fa-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>

<div class="card panel panel-inverse">
    <div class="card-header bg-gradient-dark panel-heading d-flex align-items-center">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-bs-toggle="card-collapse">
                <i class="fa fa-minus"></i>
            </a>
        </div>
        <h4 class="panel-title text-white mb-0">
            <i class="fa fa-user me-2"></i> Update User Information
        </h4>
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3 rounded-3 border-start border-success border-5">
            <i class="fa fa-check-circle me-2 text-success"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ERROR MESSAGE -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3 rounded-3 border-start border-danger border-5">
            <i class="fa fa-exclamation-circle me-2 text-danger"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="panel-body p-4">
        <div class="row">
            <div class="col-xl-8 offset-xl-2">
                <!-- User Info Card -->
                <div class="card mb-4 bg-light">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="avatar avatar-lg bg-primary text-white rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                <span class="fs-3">@(Model.FirstName.Substring(0, 1))@(Model.LastName.Substring(0, 1))</span>
                            </div>
                            <div>
                                <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                                <p class="text-muted mb-0">
                                    <i class="fa fa-envelope me-1"></i> @Model.Email
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-controller="Account" asp-action="EditUser" method="post" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger rounded-3 p-3 bg-danger bg-opacity-10 mb-4"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4 row">
                        <label asp-for="FirstName" class="col-lg-4 col-form-label text-lg-end fw-semibold">First Name <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa fa-user"></i></span>
                                <input asp-for="FirstName" class="form-control form-control-lg" placeholder="Enter first name" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="LastName" class="col-lg-4 col-form-label text-lg-end fw-semibold">Last Name <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa fa-user"></i></span>
                                <input asp-for="LastName" class="form-control form-control-lg" placeholder="Enter last name" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="Email" class="col-lg-4 col-form-label text-lg-end fw-semibold">Email <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter email address" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="PhoneNumber" class="col-lg-4 col-form-label text-lg-end fw-semibold">Phone Number</label>
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa fa-phone"></i></span>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Enter phone number" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="EmailConfirmed" class="col-lg-4 col-form-label text-lg-end fw-semibold">Account Status</label>
                        <div class="col-lg-8">
                            <div class="form-check form-switch">
                                <input asp-for="EmailConfirmed" class="form-check-input" style="width: 3em; height: 1.5em;" />
                                <label class="form-check-label ms-2 fw-semibold @(Model.EmailConfirmed ? "text-success" : "text-warning")" for="EmailConfirmed">
                                    @(Model.EmailConfirmed ? "Active" : "Inactive")
                                </label>
                            </div>
                            <small class="text-muted">
                                <i class="fa fa-info-circle me-1"></i> Toggle this switch to activate or deactivate the user account.
                            </small>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="RoleId" class="col-lg-4 col-form-label text-lg-end fw-semibold">User Role <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa fa-users"></i></span>
                                <select asp-for="RoleId" asp-items="Model.AvailableRoles" class="form-select form-select-lg">
                                    <option value="">-- Select Role --</option>
                                </select>
                            </div>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="card bg-light border rounded-3 mb-4 mt-5">
                        <div class="card-header bg-light border-bottom">
                            <h5 class="card-title mb-0">
                                <i class="fa fa-key text-primary me-2"></i> Change Password (Optional)
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">
                                <i class="fa fa-info-circle me-1"></i> Leave blank to keep the current password
                            </p>

                            <div class="mb-4 row">
                                <label asp-for="Password" class="col-lg-4 col-form-label text-lg-end fw-semibold">New Password</label>
                                <div class="col-lg-8">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white"><i class="fa fa-lock"></i></span>
                                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter new password" />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="text-muted fst-italic">
                                        Password must be at least 8 characters and contain uppercase, lowercase, number, and special characters.
                                    </small>
                                </div>
                            </div>

                            <div class="mb-2 row">
                                <label asp-for="ConfirmPassword" class="col-lg-4 col-form-label text-lg-end fw-semibold">Confirm New Password</label>
                                <div class="col-lg-8">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white"><i class="fa fa-lock"></i></span>
                                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm new password" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2 mt-5">
                        <div class="col-lg-8 offset-lg-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5 me-2">
                                <i class="fa fa-save me-1"></i> Save Changes
                            </button>
                            <a asp-controller="Account" asp-action="UserList" class="btn btn-outline-secondary btn-lg">
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}